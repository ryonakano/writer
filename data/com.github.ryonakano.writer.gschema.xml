<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/ryonakano/writer/" id="com.github.ryonakano.writer">
    <key name="destination" type="s">
      <default>''</default>
      <summary>File destination</summary>
      <description>The location to save files</description>
    </key>
    <key name="count-include-spaces" type="b">
      <default>false</default>
      <summary>Include spaces to count characters</summary>
      <description>Whether include spaces to count characters</description>
    </key>
    <key name="window-position" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window position</summary>
      <description>Position of last closed window</description>
    </key>
    <key name="window-size" type="(ii)">
      <default>(950, 800)</default>
      <summary>Window size</summary>
      <description>Size of last closed window</description>
    </key>
    <key name="is-maximized" type="b">
      <default>false</default>
      <summary>Open window maximized</summary>
      <description>If true, window opens maximized</description>
    </key>
  </schema>
</schemalist>
